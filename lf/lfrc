cmd paste_replace_confirm %{{
	mode=$(head -1 ~/.local/share/lf/files)
	list=$(sed 1d ~/.local/share/lf/files)

	if [ $mode = 'copy' ]; then
		cp -i -r $list .
		print "File(s) copied."
	elif [ $mode = 'move' ]; then
		mv -i $list .
		print "File(s) moved."
	fi
	
	# lf -remote 'send load'
	lf -remote 'send clear'
}}

cmd paste_replace %{{
	mode=$(head -1 ~/.local/share/lf/files)
	list=$(sed 1d ~/.local/share/lf/files)

	if [ $mode = 'copy' ]; then
		cp -r $list .
		print "File(s) copied."
	elif [ $mode = 'move' ]; then
		mv $list .
		print "File(s) moved."
	fi
	
	# lf -remote 'send load'
	lf -remote 'send clear'
}}

cmd paste_duplicate %{{
	count=$(wc -l < ~/.local/share/lf/files)

	lf -remote "send $id paste"
	lf -remote "send clear"

	if (( count < 3)); then
		# select last created file
		last=$(ls -Art | tail -n 1)
		mv -i "${last}" "${last/%.~1~/_bkp}"
		last=$(ls -Art | tail -n 1)
		lf -remote "send $id select $last"
		# TODO - rename odmah posle kopiranja
		# Ne treba mi, ali, bitno je da znam
		# zašto donja komanda nije htela da radi!
		# lf -remote "send $id rename $last"
	fi
}}

cmd create_new_directory %{{
	printf "Directory name: "
	read dirname
	mkdir "$dirname" && echo "Directory $dirname created."
}}

cmd create_new_file %{{
	printf "File name: "
	read filename
	touch "$filename" && echo "File $filename created"
}}

# use '<delete>' key for either 'trash' or 'delete' command
# map <delete> trash
# map <delete> delete

# extract the current file with the right command
# (xkcd link: https://xkcd.com/1168/)
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

# compress current file or selected files with tar and gunzip
cmd tar ${{
    set -f
    mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1
}}

# compress current file or selected files with zip
cmd zip ${{
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}

cmd set_background_image ${{
    set -f
	/usr/bin/feh --no-fehbg --bg-fill $f
}}

cmd fancy_rename ${{
	# get 'basename' of the selection
	filename="${f##*/}"
	# quote it so we won't deal with quotes in the lf -remote command
	filename="$(printf '%q' "$filename")"
	filename="${filename// /<space>}"
	lf -remote "send $id push :rename<space>$filename<a-b><c-b>"
}}

