cmd follow-link %{{
	lf -remote "send $id select \"$(readlink -- "$f" | sed 's/\\/\\\\/g;s/"/\\"/g')\""
}}

cmd proba %{{
	nvim "$fx"
}}

cmd usage %{{
	lines=$(grep -c . <<<"$fx")

	if (( lines < 2 )); then
		#printf "Jedna linija"
		usg=$(du -sh $fx)
	else
		#printf "Više linija"
		usg=$(du -shc $fx | tail -n 1 | sed "s/\ttotal/ in $lines file(s)/g")
	fi

	printf "Size on disk: $usg"
}}

# define a custom 'delete' command
cmd delete %{{
	line_count=$(grep -c . <<<"$fx")
	selection=$(tr '\n' ' ' <<<"$fx")
	lf -remote "send $id toggle $selection"

	if (( line_count < 2)); then
		# selection=$(basename $fx)
		selection=${f##*/}
	else
		selection="$line_count file(s)"
	fi

	set -f
	printf " Delete $selection? [yy/n]: "
	read ans
	# printf "$fx\nDelete? \"$fx\" [yy/n]: "

	if [ "$ans" = "yy" ]; then
		if (( line_count < 2)); then
			printf "File $selection deleted!"
		else
			printf "Deleted $selection."
		fi
	else
		if [ "$ans" = "n" ]; then 
			echo "Deletion of $selection canceled."
		else
			echo "Deletion of $selection failed."
		fi

	fi

	[ "$ans" = "yy" ] && rm -rf $fx
}}
